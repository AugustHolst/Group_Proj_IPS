fun int mul(int x, int y) =
	if x == 0 then 0
	else if 0<x then
		y + mul(x - 1, y)
	else
		mul(x+1,y)-y

fun int readInt(int i) =
	read(int)

fun int plus (int x, int y) = x + y

fun int main() =
	let n = read(int) in
	if n<1 then
		let fail = write("Incorrect Input") in
		0
	else
		let arr1 = iota(n) in
		let arr = map(readInt, iota(n)) in
		let difs = map(fn int (int i) =>
			if i == 0 then
				arr[i]
			else
				arr[i] - arr[i-1], iota(n)) in

		let squares = map(fn int (int i) =>
			mul(difs[i], difs[i]), iota(n)) in

		let result = reduce(plus, 0, squares) in
		let res = write(result) in
